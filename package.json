{
  "name": "@yuki0410/minimal-collapse",
  "version": "1.1.2",
  "description": "Minimal and Tiny Javascript Library for Collapse",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "module": "dist/index.esm.js",
  "browser": "dist/minimal-collapse.js",
  "files": [
    "package.json",
    "README.md",
    "LICENSE",
    "types",
    "dist"
  ],
  "keywords": [
    "front-end",
    "collapse",
    "accordion",
    "vanillajs",
    "typescript"
  ],
  "author": {
    "name": "yuki0410",
    "url": "https://twitter.com/yuki0410_"
  },
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rollup -c",
    "lint": "eslint src/**/*.ts",
    "format": "eslint --fix src/**/*.ts",
    "lint-staged": "lint-staged",
    "start": "browser-sync start --config \"./.bs-config.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://ohnaka0410@github.com/ohnaka0410/minimal-collapse.git"
  },
  "bugs": {
    "url": "https://github.com/ohnaka0410/minimal-collapse/issues"
  },
  "homepage": "https://github.com/ohnaka0410/minimal-collapse#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.(html,css)": [
        "prettier --write",
        "git add"
      ],
      "*.(ts,tsx,js,jsx)": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "dist/**/*"
    ]
  },
  "dependencies": {
    "tslib": "^2.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-typescript": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "browser-sync": "^2.26.14",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "lodash.camelcase": "^4.3.0",
    "lodash.upperfirst": "^4.3.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.40.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.2.3"
  }
}
